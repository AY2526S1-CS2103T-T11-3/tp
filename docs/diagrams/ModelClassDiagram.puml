@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model as ModelPackage <<Rectangle>>{
Class "<<interface>>\nReadOnlyClubBook" as ReadOnlyClubBook
Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs
Class "<<interface>>\nModel" as Model
Class ClubBook
Class ModelManager
Class UserPrefs

Class UniqueMemberList
Class Member
Class Email
Class Name
Class Phone
Class MemberRole

Class UniqueEventList
Class Event
Class EventRole
class DateTime

Class I #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

ClubBook .up.|> ReadOnlyClubBook

ModelManager .up.|> Model
Model .right.> ReadOnlyUserPrefs
Model .left.> ReadOnlyClubBook
ModelManager -left-> "1" ClubBook
ModelManager -right-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

ClubBook *--> "1" UniqueMemberList
ClubBook *--> "1" UniqueEventList
UniqueMemberList --> "~* all" Member
Member *--> Name
Member *--> Phone
Member *--> Email
Member *--> "*" MemberRole
Member --> "*" EventRole

Member -[hidden]up--> I
UniqueMemberList -[hidden]right-> I

UniqueEventList --> "~* all" Event
Event *--> Name
Event --> "*" Member
Event --> "1 from" DateTime
Event --> "0..1 to" DateTime
Event *--> "*" EventRole

DateTime -[hidden]right-> Phone
Name -[hidden]right-> Phone
Phone -[hidden]right-> Email

ModelManager --> "~* filtered" Member
@enduml
